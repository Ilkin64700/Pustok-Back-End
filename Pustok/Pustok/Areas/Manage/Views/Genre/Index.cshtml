@model ICollection<Genre>
@{
    ViewData["Title"] = "Index";
}

<h1 class="h3 mb-4 text-gray-800">Genre Page</h1>

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Genre genre in Model)
        {
            <tr>
                <th scope="row">@genre.Id</th>
                <td>@genre.Name</td>
                <td>
                    <a class="btn btn--primary" asp-action="Detail" asp-route-Id="@genre.Id">Detail</a>
                    <a class="btn btn-warning" asp-action="Update" asp-route-Id="@genre.Id">Update</a>
                    <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@genre.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>