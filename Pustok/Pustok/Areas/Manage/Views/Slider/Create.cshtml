@model Slider
@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title">
        <span class="alert-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description"></label>
        <input class="form-control" asp-for="@Model.Description">
        <span class="alert-danger" asp-validation-for="@Model.Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Price"></label>
        <input class="form-control" asp-for="@Model.Price">
        <span class="alert-danger" asp-validation-for="@Model.Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Order"></label>
        <input class="form-control" asp-for="@Model.Order">
        <span class="alert-danger" asp-validation-for="@Model.Order"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.File"></label>
        <input class="form-control" accept="image/*" asp-for="@Model.File" >
        <span class="alert-danger" asp-validation-for="@Model.File"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>