@model ICollection<Product>
@{
    ViewData["Title"] = "Index";
}

<h1 class="h3 mb-4 text-gray-800">Product Page</h1>

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">DisCount Price</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
        <tr>
            <th scope="row">@product.Id</th>
            <td>
                <img style="width:100px; height:100px;" src="~/image/products/@product.MainImage" alt="Alternate Text" />
            </td>
            <td>@Html.Raw(product.Title)</td>
            <td>@product.Price</td>
            <td>@product.DiscountPrice</td>
            <td>
                <a class="btn btn--primary" asp-action="Detail" asp-route-Id="@product.Id">Detail</a>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@product.Id">Update</a>
                <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@product.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>